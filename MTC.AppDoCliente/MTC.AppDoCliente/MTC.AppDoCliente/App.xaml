<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MTC.AppDoCliente.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#000000</Color>
            <Color x:Key="PrimaryDark">#404040</Color>
            <Color x:Key="Accent">#C0C0C0</Color>
            <Color x:Key="LightBackgroundColor">#FAFAFA</Color>
            <Color x:Key="DarkBackgroundColor">#C0C0C0</Color>
            <Color x:Key="MediumGrayTextColor">#4d4d4d</Color>
            <!--Color x:Key="LightTextColor">#999999</Color-->
            <Color x:Key="LightTextColor">#000000</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>

            <ControlTemplate x:Key="MainPageTemplate">
                <StackLayout>
                    <ContentView >
                        <Label Text="App do Cliente" FontSize="13" HorizontalTextAlignment="Center" />
                     </ContentView >
                     <ContentPresenter VerticalOptions="FillAndExpand" />
                </StackLayout>
            </ControlTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
