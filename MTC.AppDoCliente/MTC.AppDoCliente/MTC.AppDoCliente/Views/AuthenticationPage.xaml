<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MTC.AppDoCliente.Views.AuthenticationPage"
             Title="AuthenticationPage">
    <StackLayout Padding="5" VerticalOptions="CenterAndExpand">
        <Label Text="Placa:" />
        <Entry x:Name="txtUsuario" Placeholder="Exemplo: ABC-9876" />
        <Label Text="Senha:" />
        <Entry x:Name="txtSenha" IsPassword="true" Placeholder="Três primeiros dígitos CPF" />
        <Button Text="ENTRAR" Clicked="OnLoginButtonClicked" />
    </StackLayout>
</ContentPage>